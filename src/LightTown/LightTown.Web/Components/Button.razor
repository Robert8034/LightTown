<div class="button m-2">
    @if (!Enabled)
    {
        <button @onclick="@Click" class="w-50" disabled>@Title</button>
    }
    else
    {
        <button @onclick="@Click" class="w-50">@Title</button>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public Func<Task> OnClick { get; set; }

    [Parameter]
    public bool Enabled { get; set; } = false;

    private async Task Click()
    {
        if (OnClick != null)
        {
            await OnClick.Invoke();
        }
    }

    public void ToggleEnabled(bool Enable)
    {
        this.Enabled = Enable;
        StateHasChanged();
    }
}
